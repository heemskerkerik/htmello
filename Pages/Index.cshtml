@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div style="width: 400px;">
        <h5>New board</h5>
        <partial name="Partial/CreateBoard" />
    </div>
</div>
<div class="row">
    <h3>Boards</h3>
</div>
<div class="row flex-nowrap">
    @foreach (var board in Model.AllBoards)
    {
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><a href="/boards/@board.Id">@board.Name</a></h5>
                </div>
            </div>
        </div>
    }
</div>