@model htmx_trello.Data.LaneDto

<div hx-get="@Url.Action("ShowAddTicketForm", "Lane", new { boardId = Model.BoardId, laneId = Model.LaneId })" 
     hx-trigger="ticketAdded:@Model.LaneId from:body"
     hx-include="">
    <form hx-post="@Url.Action("AddTicket", "Ticket", new { boardId = Model.BoardId, laneId = Model.LaneId })"
          hx-target="previous .sortable"
          hx-swap="beforeend"
          hx-include="">
        @Html.AntiForgeryToken()
        <input name="name" required placeholder="Add new ticket"/>
    </form>
</div>