@{
    var bodyStyle = ViewData["BodyBackgroundColor"] switch
                    {
                        not null => $"background-color: {ViewData["BodyBackgroundColor"]}",
                        null => null,
                    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Htmello</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    <meta name="htmx-config" content='{"methodsThatUseUrlParams":["get"]}' />
</head>
<body hx-ext="debug">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Index" asp-action="Index">Htmello</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Index" asp-action="Index">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container-fluid" style="@bodyStyle">
    <main role="main" class="pb-3 pt-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/htmx/htmx.min.js"></script>
<script src="~/lib/htmx/htmx-debug.js"></script>
<script src="~/lib/sortable/Sortable.min.js"></script>
<script src="~/lib/hyperscript/hyperscript.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>